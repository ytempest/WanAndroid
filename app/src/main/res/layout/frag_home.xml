<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ytempest.wanandroid.widget.MaskLayout
        android:id="@+id/layout_main_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mask_layout="@layout/layout_net_error">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/view_main_pull_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_bg">

            <include layout="@layout/frag_home_content" />

        </android.support.v4.widget.SwipeRefreshLayout>
    </com.ytempest.wanandroid.widget.MaskLayout>

    <com.ytempest.wanandroid.widget.MainLoadView
        android:id="@+id/view_main_load_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>